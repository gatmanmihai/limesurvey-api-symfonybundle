<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="youmesoft_lime_survey.manager.class">Youmesoft\LimeSurveyBundle\Manager\ApiManager</parameter>
        <parameter key="youmesoft_lime_survey.manager.factory.class">Youmesoft\LimeSurveyBundle\Factory\ApiManagerFactory</parameter>
    </parameters>

    <services>
        <service id="youmesoft_lime_survey.manager.factory" class="%youmesoft_lime_survey.manager.factory.class%" public="false">
            <argument type="collection"/>
        </service>

        <service id="youmesoft_lime_survey.manager" class="%youmesoft_lime_survey.manager.class%">
            <factory service="youmesoft_lime_survey.manager.factory" method="createApiManager"/>
        </service>
    </services>
</container>
